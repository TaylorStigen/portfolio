<div class="feature col-6 col-md-3 col-lg-3 pb-2 text-center d-flex flex-column align-items-center">
    <strong class="mb-2">{{ title }}</strong>
    {{ if title == "MongoDB" }}
    <img src="{{ img }}" alt="{{ desc }}" class="img-fluid m-auto" style="max-width: 30px;">
    {{ else }}
    <img src="{{ img }}" alt="{{ desc }}" class="img-fluid m-auto" style="max-width: 60px;">
    {{ /if }}
</div>